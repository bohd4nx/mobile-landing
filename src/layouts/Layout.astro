---
/** biome-ignore-all lint/correctness/noUnusedImports: React icons are used in JSX */
/** biome-ignore-all lint/correctness/noUnusedVariables: variables used in Astro components */

import { siteConfig } from "@config/site";
import Footer from "@/sections/Footer";
import type { LayoutProps } from "@/types/ui";
import BackToTop from "@/ui/BackToTop";
import FloatingNavbar from "@/ui/FloatingNavbar";

interface Props extends LayoutProps {}

const { title, description } = Astro.props;
const canonicalURL = Astro.site
	? new URL(Astro.url.pathname, Astro.site)
	: Astro.url;
const appleTouchIconURL = Astro.site
	? new URL(siteConfig.logo, Astro.site).href
	: siteConfig.logo;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={siteConfig.keywords.join(", ")} />
    
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    
    <link rel="canonical" href={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    {description && <meta property="og:description" content={description} />}
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    
    <link rel="icon" type="image/png" sizes="32x32" href={siteConfig.logo} />
    <link rel="icon" type="image/png" sizes="16x16" href={siteConfig.logo} />
    <link rel="icon" sizes="192x192" href={siteConfig.logo} />
    <link rel="icon" sizes="512x512" href={siteConfig.logo} />
    <link rel="apple-touch-icon" sizes="180x180" href={appleTouchIconURL} />
    
    <script is:inline>
      // if ('scrollRestoration' in history) {
      //   history.scrollRestoration = 'manual';
      // }

      // window.addEventListener('beforeunload', () => {
      //   window.scrollTo(0, 0);
      // });

      // window.scrollTo(0, 0);
      
      const theme = localStorage.getItem('theme') || 'system';
      document.documentElement.classList.remove('light', 'dark');
      
      if (theme === 'system') {
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        document.documentElement.classList.add(prefersDark ? 'dark' : 'light');
      } else {
        document.documentElement.classList.add(theme);
      }
      
      !localStorage.getItem('theme') && localStorage.setItem('theme', 'system');
    </script>
  </head>
  <body class="bg-gray-50 text-gray-900 dark:bg-black dark:text-white">
    <FloatingNavbar logo={siteConfig.logo} title={siteConfig.name} storeLinks={siteConfig.storeLinks} client:load />
    <div class="mx-auto h-screen max-w-[500px] px-5 lg:max-w-[1400px]">
      <main><slot /></main>
      <Footer client:load />
    </div>
    <BackToTop client:load />
  </body>
</html>


<style is:global>
  html.theme-switching *,
  html.theme-switching {
    transition: none !important;
  }
  
  html.light { color-scheme: light; }
  html.dark { color-scheme: dark; }

  .screenshots-scrollbar::-webkit-scrollbar {
    height: 8px;
  }
  
  .screenshots-scrollbar::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 4px;
  }
  
  .dark .screenshots-scrollbar::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
  }
  
  .screenshots-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.15);
    border-radius: 4px;
  }
  
  .dark .screenshots-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.15);
  }
  
  .screenshots-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.25);
  }
  
  .dark .screenshots-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.25);
  }
</style>
