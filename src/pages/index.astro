---
/** biome-ignore-all lint/correctness/noUnusedImports: React icons are used in JSX */
/** biome-ignore-all lint/correctness/noUnusedVariables: variables used in Astro components */

import { faqs } from "@config/faqs";
import { features } from "@config/features";
import { reviews } from "@config/reviews";
import { screenshots } from "@config/screenshots";
import { siteConfig } from "@config/site";
import Layout from "@layouts/Layout.astro";
import Lightbox from "@/interactive/Lightbox";
import Reviews from "@/interactive/Reviews";
import Screenshots from "@/interactive/Screenshots";
import AppHero from "@/sections/AppHero";
import FAQ from "@/sections/FAQ";
import Features from "@/sections/Features";

const { name, description, storeLinks, logo } = siteConfig;
const title = `${name} - Modern Mobile App Landing Page Template`;
const pageDescription = `${description} Download now for iOS and Android.`;
---

<Layout title={title} description={pageDescription}>
  <main class="min-h-screen py-8 container mx-auto px-3 md:px-6">
    <AppHero title={name} description={description} storeLinks={storeLinks} logo={logo} client:load />
    <div class="mb-16"><Screenshots images={screenshots} client:load /></div>
    <Features items={features} client:load />
    <Reviews items={reviews} client:visible />
    <FAQ items={faqs} client:load />
  </main>
</Layout>

<Lightbox images={screenshots} client:load />

<style is:global>
  .screenshots-scroll {
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    &::-webkit-scrollbar { display: none; }
  }
</style>
